{{> nav/nav-block}}

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <h2 style="color: brown; font-size: 40px; text-align:center">Add A New Restaurant</h2>
            <label style="color: brown; font-size: 25px;" for="restaurant-name"><b>Restaurant Name:</b></label>
            <input type="text" id="restaurant-name" class="form-control" aria-describedby="restaurant-name"
              placeholder="Enter restaurant name">
         <br>
          <div class="form-group">
            <label style="color: brown; font-size: 25px;" for="restaurant-description"><b>Restaurant
                Description:</b></label>

            <textarea class="form-control" id="restaurant-description" aria-describedby="restaurant-description"
              placeholder="Enter restaurant description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <div>
          <h4 id="belong">Saved Restaurants:</h4>
          <ul id="restaurant-list" class="list-group">
            {{#each restaurants}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="restaurant/{{this.id}}">{{this.name}}</a>
              <button class="btn btn-danger float-right delete">ï½˜</button>
            </li>
            {{/each}}
          </ul>
           </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="/assets/js/restaurant.js"></script>

